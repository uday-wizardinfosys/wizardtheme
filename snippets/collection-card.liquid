<div class="collection_card">
    <div class="collection_card__image">
        {% if card_collection.image != blank %}           
            {{ card_collection.image | image_url: width: 1500 | image_tag:
                loading: 'lazy',
                width: card_collection.image.width,
                height: 450,
                widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                alt: card_collection.image.alt | escape
            }}
        {% else %}
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
    </div>
    <div class="collection_card__content">
        <h3 class="h4 collection_card__title">{{card_collection.title}}</h5>
        {{card_collection.content | escape | truncate: 50}}
    </div>
</div>