
{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

{%- if section.settings.image.size != blank -%}
  {%- assign img_url = section.settings.image | img_url:'master' -%}
{%- else -%}
  {%- assign img_url = '' -%}
{%- endif -%}
{% if section.settings.text-align == 'style1' %}
   {% assign text_align = 'justify-content-start' %}
{% elsif section.settings.text-align == 'style2' %}
   {% assign text_align = 'justify-content-center text-center mx-auto' %}
{% elsif section.settings.text-align == 'style3' %}
   {% assign text_align = 'justify-content-end' %}
{% endif %}
<div class="banner_image_wrapper banner_image_large bg_cover bg_right_top {{ section.settings.position}}" style="background-image: url({{img_url}});">
    <div class="page-width">
    <div class="grid-row {{text_align}}">
      <div class="grid-col-xl-7 grid-col-lg-8 grid-col-12">
        <div class="banner_image_content_wrap">
          {%- if section.settings.title != blank or section.settings.sub-title != blank -%}
            <h1>{{section.settings.title}}<br/>{{section.settings.sub-title}}</h1>
          {%- endif -%}  
          {%- if section.settings.description != blank -%}
            <div class="content {% if section.settings.text-align == 'style2' %}mx-auto{% endif %}">
              {{section.settings.description}}
            </div>
          {%- endif -%}
          {%- if section.settings.btn-name != blank -%}
            <div class="btn_wrap">
              <a href="{{section.settings.btn-link}}" class="btn btn-white btn-arrow">{{section.settings.btn-name}} {% render 'icon-arrow-right' %}</a>
            </div>
          {%- endif -%}  
        </div> 
      </div>
    </div>
   </div>
</div>



{% schema %}
{
  "name": "t:sections.image-banner.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type":"image_picker",
      "id":"image",
      "label":"Image"
    },
    {
      "type":"text",
      "id":"title",
      "label":"Title",
      "default":"Further Reductions"
    },
    {
      "type":"text",
      "id":"sub-title",
      "label":"Sub Title",
      "default":"Up To 70% Off On Sale"
    },
    {
      "type":"richtext",
      "id":"description",
      "label":"Description",
      "default":"<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.In rhoncus augue nibh, at ullamcorper orci ullamcorper ut.</p>"
    },
    {
      "type":"text",
      "id":"btn-name",
      "label":"Button Name",
      "default":"Explore Collection"
    },
    {
      "type":"url",
      "id":"btn-link",
      "label":"Button Link"
    },
    {
      "type": "select",
      "options": [
        {
          "value": "align-items-start",
          "label": "Top"
        },
        {
          "value": "align-items-center",
          "label": "Middle"
        },
        {
          "value": "align-items-end",
          "label": "Bottom"
        }
      ],
      "id": "position",
      "default": "align-items-center",
      "label": "Select position"
    },
    {
      "type": "select",
      "options": [
        {
          "value": "style1",
          "label": "Left"
        },
        {
          "value": "style2",
          "label": "Center"
        },
        {
          "value": "style3",
          "label": "Right"
        }
      ],
      "id": "text-align",
      "default": "style1",
      "label": "Select text align"
    }

  ],

  "presets": [
    {
      "name": "t:sections.image-banner.presets.name"
    }
  ]
}
{% endschema %}