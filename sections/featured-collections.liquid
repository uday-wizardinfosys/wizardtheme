{{ 'component-collection-card.css' | asset_url | stylesheet_tag }}
{{ 'section-featured-collections.css' | asset_url | stylesheet_tag }}

<div class="featured_collections_wrapper">
    <div class="page-width">
        <div class="featured_collections_top">
            <div class="featured_collections_title_wrapper">
                {% if section.settings.title != blank %}
                    <h2 class="featured_collections_title">{{section.settings.title}}</h2>
                {% endif %}    
                {{section.settings.description}}
            </div>
            <div class="featured_collections_btns">                
            </div>
        </div>
        <div class="grid-row">
            {% if section.blocks.size != 0 %}
                {% for block in section.blocks %}
                    {% assign collection = block.settings.coll %}
                    <div class="grid-col-lg-4 grid-col-md-6 grid-col-12">
                        {% render 'collection-card',card_collection:collection %}
                    </div>
                {% endfor %}
            {% else %} 
                {% for i in (1..3) %}
                    <div class="grid-col-lg-4 grid-col-md-6 grid-col-12">
                        {% render 'collection-card' %}
                    </div>
                {% endfor %}
            {% endif %}              
        </div>
        {% if section.settings.btn-title != blank %}
            <div class="btn_wrap text-center">
                <a href="{{section.settings.btn-link}}" class="btn btn-arrow">{{section.settings.btn-title}}{% render 'icon-arrow-right' %}</a>
            </div>
        {% endif %}
    </div>
</div>


{% schema %}
{
  "name": "Featured collections",
  "tag": "section",
  "class": "section",
  "settings": [
    {
        "type":"text",
        "id":"title",
        "label":"Title",
        "default":"Discover Our products"
    },
    {
        "type":"richtext",
        "id":"description",
        "label":"Description",
        "default":"<p>Believe what you see!</p>"
    },
    {
        "type":"text",
        "id":"btn-title",
        "label":"Button Title",
        "default":"View More"
    },
    {
        "type":"url",
        "id":"btn-link",
        "label":"Button Link"        
    }
  ],
  "blocks":[
    {
        "type":"collection",
        "name":"Collection",
        "settings":[
            {
                "type":"collection",
                "id":"coll",
                "label":"Select Collection"
            }
        ]
    }
  ],
  "presets": [
    {
      "name": "Featured collections",
      "blocks":[
        {
            "type":"collection"
        },
        {
            "type":"collection"
        },
        {
            "type":"collection"
        }
      ]
    }
  ]
}
{% endschema %}

